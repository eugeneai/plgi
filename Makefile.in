QUIET_CC= @echo "   [CC]      $@" 1>&2;
QUIET_LD= @echo "   [LD]      $@" 1>&2;

CFLAGS+= -Wall -I. @SWI_CFLAGS@ @GI_CFLAGS@
LDFLAGS= -Wall -shared @SWI_LIBS@ @GI_LIBS@

CC=@CC@

all:
	(cd src && $(MAKE) plgi.so)

install:
	(cd src && $(MAKE) install)

check:
	(cd test && $(MAKE) check)

pack:
	scripts/make_pack.sh

clean:
	(cd src && $(MAKE) clean)
	(cd test && $(MAKE) clean)

distclean:
	(cd src && $(MAKE) distclean)
	(cd test && $(MAKE) distclean)
	rm -rf autom4te.cache
	rm -f Makefile configure config.status config.log
